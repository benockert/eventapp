<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-check form-check-inline">
    <%= label f, "Yes", class: "form-check-label"%>
    <%= radio_button f, :response, "YES" %>
    <%= error_tag f, :response %>
    <%= hidden_input f, :post_id %>
    <%= hidden_input f, :user_id %>
  </div>
  <div class="form-check form-check-inline">
    <%= label f, "No", class: "form-check-label"%>
    <%= radio_button f, :response, "NO" %>
    <%= error_tag f, :response %>
    <%= hidden_input f, :post_id %>
    <%= hidden_input f, :user_id %>
  </div>
  <div class="form-check-inline">
      <%= submit "Update", class: "btn btn-primary btnResponse" %>
  </div>



<% end %>
