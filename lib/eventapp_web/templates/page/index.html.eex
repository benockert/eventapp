<h1>Events Feed</h1>
 
<div class="row">
  <%= for event <- @posts do %>
    <div class="col-sm-4 card">
      <div class="card-body">
        <p class="card-title"><%= event.name %></p>
        <p class="card-text"><%= event.description %></p>
        <%= link "view", to: Routes.post_path(@conn, :show, event) %>
      </div>
    </div>
  <% end %>
</div>
   
    




