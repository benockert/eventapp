<h1>Events Feed</h1>
<div class="row">
  <%= for event <- @posts do %>
    <div class="col-sm-4 card">
      <div class="card-body">
        <h3 class="card-title"><%= event.name %></h3>
        <p class="card-text"><%= event.description %></p>
        <%= link "view", to: Routes.post_path(@conn, :show, event) %>
      </div>
    </div>
  <% end %>
</div>
